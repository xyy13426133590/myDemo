/* components/dialog/dialog.wxss */

.dialog {
  position:fixed ;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.8);
}
.dialog_content {
  position: relative;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.dialog_close {
  position: absolute;
  top: -25rpx;
  right: -25rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: #fff;
}